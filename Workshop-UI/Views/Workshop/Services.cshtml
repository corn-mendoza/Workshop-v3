@*@model Workshop_UI.Services.Fortune*@
@model CloudFoundryViewModel
@{
    ViewData["Title"] = "Cloud Services";
}
<div class="jumbotron">
    <div class="media">
        <a class="pull-left" href="http://pivotal.io">
            <img class="" src="~/images/icon_pivotal_generic@2x.png" title="Cloud Foundry" alt="PCF" width="70" height="70" />
        </a>
        <div class="media-body">
            <h1 class="media-heading">Cloud Patterns for .NET</h1>
        </div>
    </div>
    <p class="lead">Cloud Native Design Patterns using Spring Cloud Services and Steeltoe</p>
    <p class="lead">Designing applications to run natively in the cloud can be hard. Steeltoe can help developers quickly implement these design patterns by leveraging configuration services, service discovery, circuit breakers, and management services available in Spring Cloud Services. .</p>
</div>
<div class="panel-primary" align="center">
    <h3>Your New Fortune sent from the Fortune Service</h3>
    <h4>@ViewData["MyFortune"]</h4>
    <h5>URL: @ViewData["FortuneUrl"]</h5>
    <h5>@ViewData["FortuneIndex"]</h5>
    <h5>@ViewData["InstanceCount"]</h5>
    @*<h3>@Model.Text</h3>*@
</div>
<div class="panel-body">
    <h2>Bound Services for Application</h2>

    @foreach (var service in Model.CloudFoundryServices.ServicesList)
    {
        <div class="media">
            <a class="pull-left" href="http://pivotal.io">
                <img class="" src="~/images/icon_pivotal_generic@2x.png" title="Cloud Foundry" alt="PCF" width="30" height="30" />
            </a>
            <div class="media-body">
                <h4 class="media-heading">@service.Label: @service.Name</h4>
            </div>
        </div>
    }
</div>
